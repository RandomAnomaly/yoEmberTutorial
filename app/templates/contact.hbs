<div class="jumbotron">
	<h1>Contact Us</h1>
	<div class={{emailValidation}}>
		{{input type="email" value=emailAddress class="form-control" placeholder="Your e-mail address." autofocus="autofocus"}}
	</div>
	<div class="form-group">
		{{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}
	</div>
	<button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'saveMessage'}}>Submit</button>
	
	
	
</div>